<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.ThirdScreen"
    android:padding="20dp"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="65dp"
        android:contentDescription="@string/healthyfood"
        android:src="@drawable/onboard3_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trivia3"
        android:fontFamily="@font/sf_bold"
        android:textSize="19sp"
        android:textColor="@color/green_40"
        android:layout_marginTop="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:text="@string/trivia_desc3"
        android:textAlignment="center"
        android:fontFamily="@font/sf_regular"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_marginTop="485dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="190dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/button_green_background"
        android:text="@string/masuk"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_regular"
        android:textSize="19sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="190dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/button_white_background"
        android:text="@string/daftar"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:fontFamily="@font/sf_regular"
        android:textSize="19sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>