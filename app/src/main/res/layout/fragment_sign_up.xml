<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selamat_datang"
        android:layout_marginTop="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/sf_bold"
        android:textColor="@color/white"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting_daftar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/sf_medium"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama"
        android:fontFamily="@font/sf_medium"
        android:textSize="16sp"
        android:textColor="@color/green_30"
        android:layout_marginTop="20dp"
        android:layout_marginStart="23dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/purple_200"
            app:hintEnabled="false"
            android:background="@drawable/editextlayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:inputType="textPersonName"
                android:textColor="@color/green_20"
                android:backgroundTint="@color/transparent"
                android:hint="@string/nama"/>

        </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:fontFamily="@font/sf_medium"
        android:textSize="16sp"
        android:textColor="@color/green_30"
        android:layout_marginTop="10dp"
        android:layout_marginStart="23dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/purple_200"
            app:hintEnabled="false"
            android:background="@drawable/editextlayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/green_20"
                android:backgroundTint="@color/transparent"
                android:hint="@string/email"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nomor_telepon"
                android:fontFamily="@font/sf_medium"
                android:textSize="16sp"
                android:textColor="@color/green_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(optional)"
                android:fontFamily="@font/sf_regular"
                android:textSize="12sp"
                android:textColor="@color/green_40"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/no_telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/purple_200"
            app:hintEnabled="false"
            android:background="@drawable/editextlayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:inputType="phone"
                android:textColor="@color/green_20"
                android:backgroundTint="@color/transparent"
                android:hint="@string/nomor_telepon"/>

        </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sandi"
        android:fontFamily="@font/sf_medium"
        android:textSize="16sp"
        android:textColor="@color/green_30"
        android:layout_marginTop="10dp"
        android:layout_marginStart="23dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:boxBackgroundMode="outline"
            app:hintEnabled="false"
            android:background="@drawable/editextlayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:inputType="textPassword"
                android:textColor="@color/green_20"
                android:backgroundTint="@color/transparent"
                android:hint="@string/sandi"/>
        </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/konf_sandi"
        android:fontFamily="@font/sf_medium"
        android:textSize="16sp"
        android:textColor="@color/green_30"
        android:layout_marginTop="10dp"
        android:layout_marginStart="23dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/konf_sandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:boxBackgroundMode="outline"
            app:hintEnabled="false"
            android:background="@drawable/editextlayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:inputType="textPassword"
                android:textColor="@color/green_20"
                android:backgroundTint="@color/transparent"
                android:hint="@string/konf_sandi"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_daftar2"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_green_background"
            android:text="@string/daftar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_regular"
            android:textSize="19sp"/>

    <TextView
        android:id="@+id/quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_alt"
        android:fontFamily="@font/sf_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="100dp" />

    <TextView
        android:id="@+id/btn_loginalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login2"
        android:fontFamily="@font/sf_medium"
        android:textSize="16sp"
        android:textColor="@color/green_30"
        android:layout_marginTop="-121dp"
        android:layout_marginStart="240dp" />

    </LinearLayout>

</ScrollView>