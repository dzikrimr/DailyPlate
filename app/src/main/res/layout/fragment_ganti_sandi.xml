<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:contentDescription="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ganti_sandi"
            android:fontFamily="@font/sf_bold"
            android:textColor="@color/green_20"
            android:textSize="28sp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sandi_lama"
        android:fontFamily="@font/sf_regular"
        android:textColor="@color/green_20"
        android:textSize="16sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sandi_baru"
        android:fontFamily="@font/sf_regular"
        android:textColor="@color/green_20"
        android:textSize="16sp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ketik_ulang_sandi_baru"
        android:fontFamily="@font/sf_regular"
        android:textColor="@color/green_20"
        android:textSize="16sp"
        android:layout_marginTop="260dp"
        android:layout_marginStart="18dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sandi_lama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:boxBackgroundMode="outline"
        app:hintEnabled="false"
        android:background="@drawable/editextlayout">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:inputType="textPassword"
        android:backgroundTint="@color/transparent"
        android:hint="@string/sandi_lama"
        android:fontFamily="@font/sf_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sandi_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:boxBackgroundMode="outline"
        app:hintEnabled="false"
        android:background="@drawable/editextlayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:inputType="textPassword"
            android:backgroundTint="@color/transparent"
            android:hint="@string/sandi_baru"
            android:fontFamily="@font/sf_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sandibaru_konf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="285dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:boxBackgroundMode="outline"
        app:hintEnabled="false"
        android:background="@drawable/editextlayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:inputType="textPassword"
            android:backgroundTint="@color/transparent"
            android:hint="@string/sandi_baru"
            android:fontFamily="@font/sf_regular"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_green_background"
        android:text="@string/simpan"
        android:fontFamily="@font/sf_regular"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"/>


</RelativeLayout>